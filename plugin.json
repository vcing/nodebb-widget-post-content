{
    "id": "nodebb-widget-post-content",
    "name": "Post Content Widget",
    "description": "Allows the contents of a post to be displayed as a widget(with specify condition).",
    "url": "https://github.com/vcing/nodebb-widget-post-content",
    "library": "./library.js",
    "hooks": [
        { "hook": "static:app.load", "method": "load" },
        { "hook": "filter:widgets.getWidgets", "method": "getWidgets" },
        { "hook": "filter:widget.render:post-content", "method": "render" }
    ],
    "templates": "./templates",
    "languages": "./languages"
}